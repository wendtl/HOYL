{
	"manifest_version": 2,
	"name": "HOYL: Hours of Your Life",
	"short_name": "HOYL",
	"description": "Time is Money",
	"version": "1.2",
	"permissions": [
		"tabs", "<all_urls>", "storage"
	],
	"browser_action": {
		"default_icon": "icon128.png",
		"default_title": "HOYL: Hours Of Your Life",
		"default_popup": "popup.html"
	},
	"content_scripts": 
	[
		{
			"matches": ["*://*/*"],
			"exclude_matches": ["*://localhost/*"],
			"js": ["hoyl.js"],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
